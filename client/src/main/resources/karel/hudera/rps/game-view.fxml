<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>

<?import javafx.scene.image.Image?>
<HBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="karel.hudera.rps.GameController"
      style="-fx-background-color: linear-gradient(to right, #00AFFF, #0055AA)">

    <!-- Rock Button -->
    <Button fx:id="rockButton" onAction="#onRockClick"
            style="-fx-background-color: transparent; -fx-padding: 10px; -fx-border-color: #FFFFFF; -fx-border-width: 2px; -fx-border-radius: 10px; -fx-pref-width: 80px; -fx-pref-height: 80px;">
        <graphic>
            <ImageView fitHeight="50" fitWidth="50" preserveRatio="true">
                <Image url="@rock.png"/>
            </ImageView>
        </graphic>
    </Button>

    <!-- Paper Button -->
    <Button fx:id="paperButton" onAction="#onPaperClick"
            style="-fx-background-color: transparent; -fx-padding: 10px; -fx-border-color: #FFFFFF; -fx-border-width: 2px; -fx-border-radius: 10px; -fx-pref-width: 80px; -fx-pref-height: 80px;">
        <graphic>
            <ImageView fitHeight="50" fitWidth="50" preserveRatio="true">
                <Image url="@paper.png"/>
            </ImageView>
        </graphic>
    </Button>

    <!-- Scissors Button -->
    <Button fx:id="scissorsButton" onAction="#onScissorsClick"
            style="-fx-background-color: transparent; -fx-padding: 10px; -fx-border-color: #FFFFFF; -fx-border-width: 2px; -fx-border-radius: 10px; -fx-pref-width: 80px; -fx-pref-height: 80px;">
        <graphic>
            <ImageView fitHeight="50" fitWidth="50" preserveRatio="true">
                <Image url="@scissors.png"/>
            </ImageView>
        </graphic>
    </Button>

</HBox>