<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="karel.hudera.rps.GameController"
      style="-fx-background-color: #ADD8E6; -fx-padding: 40; -fx-alignment: center;">

    <Button text="🪨 Rock" fx:id="rockButton" onAction="#onRockClick"
            style="-fx-font-size: 24px; -fx-background-color: #f0f0f0;
                   -fx-text-fill: black; -fx-padding: 10px 20px; -fx-background-radius: 10px;"/>

    <Button text="📄 Paper" fx:id="paperButton" onAction="#onPaperClick"
            style="-fx-font-size: 24px; -fx-background-color: #f0f0f0;
                   -fx-text-fill: black; -fx-padding: 10px 20px; -fx-background-radius: 10px;"/>

    <Button text="✂️ Scissors" fx:id="scissorsButton" onAction="#onScissorsClick"
            style="-fx-font-size: 24px; -fx-background-color: #f0f0f0;
                   -fx-text-fill: black; -fx-padding: 10px 20px; -fx-background-radius: 10px;"/>
</VBox>