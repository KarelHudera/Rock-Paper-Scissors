<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<?import javafx.scene.layout.VBox?>
<HBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="karel.hudera.rps.GameController"
      style="-fx-background-color: linear-gradient(to right, #00AFFF, #0055AA); -fx-fill-width: true; -fx-fill-height: true;">

    <!-- StackPane to center all elements -->
    <StackPane alignment="CENTER" style="-fx-padding: 20px;">
        <!-- Loading Screen (Initially visible) -->
        <StackPane fx:id="loadingPane" visible="true">
            <Text text="Waiting for opponent..." style="-fx-font-size: 24px; -fx-fill: white;"/>
        </StackPane>

        <!-- Game Buttons (Initially hidden) -->
        <HBox fx:id="buttonsPane" alignment="CENTER" spacing="20.0" visible="false">
            <!-- Rock Button -->
            <Button fx:id="rockButton" onAction="#onRockClick"
                    style="-fx-background-color: transparent; -fx-padding: 10px; -fx-border-color: #FFFFFF; -fx-border-width: 2px; -fx-border-radius: 10px; -fx-pref-width: 80px; -fx-pref-height: 80px;">
                <graphic>
                    <ImageView fitHeight="50" fitWidth="50" preserveRatio="true">
                        <Image url="@rock.png"/>
                    </ImageView>
                </graphic>
            </Button>

            <!-- Paper Button -->
            <Button fx:id="paperButton" onAction="#onPaperClick"
                    style="-fx-background-color: transparent; -fx-padding: 10px; -fx-border-color: #FFFFFF; -fx-border-width: 2px; -fx-border-radius: 10px; -fx-pref-width: 80px; -fx-pref-height: 80px;">
                <graphic>
                    <ImageView fitHeight="50" fitWidth="50" preserveRatio="true">
                        <Image url="@paper.png"/>
                    </ImageView>
                </graphic>
            </Button>

            <!-- Scissors Button -->
            <Button fx:id="scissorsButton" onAction="#onScissorsClick"
                    style="-fx-background-color: transparent; -fx-padding: 10px; -fx-border-color: #FFFFFF; -fx-border-width: 2px; -fx-border-radius: 10px; -fx-pref-width: 80px; -fx-pref-height: 80px;">
                <graphic>
                    <ImageView fitHeight="50" fitWidth="50" preserveRatio="true">
                        <Image url="@scissors.png"/>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>

        <!-- Move Played Card (Initially hidden) -->
        <StackPane fx:id="movePlayedPane" visible="false">
            <VBox alignment="CENTER" spacing="10.0">
                <Text text="Move Played!" style="-fx-font-size: 24px; -fx-fill: white;"/>
                <Text fx:id="selectedMoveText" text="" style="-fx-font-size: 20px; -fx-fill: white;"/>
            </VBox>
        </StackPane>

    </StackPane>
</HBox>